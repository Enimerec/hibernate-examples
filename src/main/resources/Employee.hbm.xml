<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "com.github.pabloo99.entity.Employee" table = "EMPLOYEES">

        <meta attribute = "class-description">
            This class contains the employee detail.
        </meta>

        <id name = "employeeId" type = "int" column = "employee_id">
            <generator class="native"/>
        </id>
        <property name = "employeeId" column = "EMPLOYEE_ID" type = "integer"/>
        <property name = "firstName" column = "first_name" type = "string"/>
        <property name = "lastName" column = "last_name" type = "string"/>
        <property name = "email" column = "EMAIL" type = "string"/>
        <property name = "phoneNumber" column = "phone_number" type = "string"/>
        <property name = "hireDate" column = "hire_date" type = "date"/>
        <property name = "jobId" column = "JOB_ID" type = "string"/>
        <property name = "salary" column = "salary" type = "double"/>
        <property name = "commissionPct" column = "COMMISSION_PCT" type = "java.lang.Double"/>
        <property name = "managerId" column = "MANAGER_ID" type = "java.lang.Integer"/>
        <property name = "departmentId" column = "department_id" type = "java.lang.Integer"/>
    </class>
</hibernate-mapping>